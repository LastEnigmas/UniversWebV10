@using Core.DTOs
@model SignInViewModel
<h1>SignIn Page</h1>
@if(ViewBag.IsSignIn == true )
{
    <h2>You In !</h2>
}
<form asp-area="Main" asp-controller="MainHome" asp-action="SignIn"  method="post">
    <div class="input-group">
        <input asp-for="UsernameOrEmail" class="form-control" placeholder="User Or Email" />
    </div>
    <div class="input-group">
        <input asp-for="Password" class="form-control" placeholder="Password" />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-success">
        SignIn
    </button>
    <button type="button" class="btn-warning">
        <a asp-area="Main" asp-controller="MainHome" asp-action="SignUp">
            I Have No Account
        </a>
    </button>
</form>